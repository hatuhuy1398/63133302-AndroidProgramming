<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center|top"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/nutSO1"
        android:text="Nut so 1"
        android:textSize="20dp"
        android:textColor="#000000"
        android:background="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
       />
    <Button
        android:id="@+id/nutSO2"
        android:text="Nut so 2"
        android:textSize="20dp"
        android:textColor="#FEC7B4"
        android:background="#FFF3C7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        />
    <Button
        android:id="@+id/nutSO3"
        android:text="Nut so 3"
        android:textSize="20dp"
        android:textColor="#FC819E"
        android:background="#F7418F"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        />

</LinearLayout>