<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/nen_chuyen_tiep"
        tools:context=".MainActivity">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/anhz"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"/>
        <TextView
            android:id="@+id/name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Hà Tứ Huy"
            android:textSize="24sp"
            android:layout_below="@id/profile_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/email_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: huy.ht.63cntt@ntu.edu.vn"

            android:textSize="16sp"
            android:layout_below="@id/name_textview"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/address_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_textview"
            android:layout_marginTop="30dp"
            android:text="Địa chỉ: Nha Trang Khánh Hoà"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/occupation_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nghề nghiệp: Sinh viên"
            android:layout_below="@id/address_textview"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/education_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trường: Đại học Nha Trang"
            android:layout_below="@id/occupation_textview"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/phone_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số điện thoại: 0987654321"
            android:layout_below="@id/education_textview"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/about_me_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giới thiệu bản thân: Tôi là một sinh viên trường Đại học Nha Trang"
            android:layout_below="@id/phone_textview"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/share_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/phone_textview"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:text="Share Profile" />


    </RelativeLayout>